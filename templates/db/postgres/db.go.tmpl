package db

import (
	"database/sql"
	"log"

	_ "github.com/lib/pq"
)

var DB *sql.DB

func Connect() {
	connStr := "user=postgres password=postgres dbname=app_db sslmode=disable"
	var err error
	DB, err = sql.Open("postgres", connStr)
	if err != nil {
		log.Fatalf("âœ– Failed to connect to PostgreSQL: %v", err)
	}
	log.Println("âœ“ Connected to PostgreSQL database")
}

func Close() {
	if DB != nil {
		DB.Close()
		log.Println("ðŸ”Œ PostgreSQL connection closed")
	}
}
