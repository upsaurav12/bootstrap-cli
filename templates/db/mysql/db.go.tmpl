	connStr := "user:password@tcp(localhost:3306)/app_db"
	var err error
	DB, err = sql.Open("mysql", connStr)
	if err != nil {
		log.Fatalf("âœ– Failed to connect to MySQL: %v", err)
	}
	log.Println("âœ“ Connected to MySQL database")
}

func Close() {
	if DB != nil {
